---
import Button from '../../../components/Button.jsx'
import { BatteryChargedIcon, Toggle } from '../../../components/icons.jsx'
---

<section
	id='functions'
	class='flex flex-col items-center px-8 py-4 gap-3 w-full lg:w-96 bg-color rounded-none sm:rounded-md border border-color'
>
	<h2 class='text-sabi font-blinker text-2xl font-semibold'>Funciones</h2>
	<article class='divide-y divide-color'>
		<div class='flex items-center justify-between h-14'>
			<h4 class='text-color font-blinker text-lg'>Nivel de bateria</h4>
			<span class='flex items-center gap-2'>
				<h4 class='text-color font-blinker text-lg'>60%</h4>
				<BatteryChargedIcon />
			</span>
		</div>
		<div class='flex items-center justify-between h-14'>
			<h4 class='text-color font-blinker text-lg'>Alarma</h4>
			<Toggle id={'toggle-alarm'} />
		</div>
		<div class='flex items-center justify-between h-14'>
			<h4 class='text-color font-blinker text-lg'>Ubicaci√≥n en tiempo real</h4>
			<Toggle id={'toggle-location'} />
		</div>
		<div class='flex items-center justify-between h-14'>
			<h4 class='text-color font-blinker text-lg'>Modo oscuro</h4>
			<Toggle id={'toggle-theme'} />
		</div>
		<div class='flex items-center w-72 justify-between h-14'>
			<h4 class='text-color font-blinker text-lg'>Descargar estadisticas</h4>
			<Button text='PDF' client:only />
		</div>
	</article>
</section>
